<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        tools:context=".Controladores.MainActivity" android:id="@+id/mainActivity">
    <ImageView
            android:src="@drawable/logo"
            android:layout_width="300dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="250dp"
            android:layout_height="200dp"
            android:id="@+id/logo"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="Correo"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            android:layout_marginTop="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/correo" android:textSize="20sp"
            tools:layout_editor_absoluteY="384dp"
            tools:layout_editor_absoluteX="55dp"
            tools:ignore="MissingConstraints"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="ContraseÃ±a"
            android:ems="10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/pass" android:textSize="20sp"
            tools:layout_editor_absoluteX="55dp"
            app:layout_constraintTop_toBottomOf="@+id/correo"
            android:layout_marginTop="25dp"
            tools:ignore="MissingConstraints"/>
    <Button
            android:text="@string/acceder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            app:layout_constraintTop_toBottomOf="@+id/pass"
            android:id="@+id/acceder"
            android:background="#00346B"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:onClick="logear"
    />
    <Button
            android:text="@string/registrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@+id/acceder"
            android:id="@+id/registrar"
            android:background="#00346B"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:onClick="register"
    />
    />

</android.support.constraint.ConstraintLayout>