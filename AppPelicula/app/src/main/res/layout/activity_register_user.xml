<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        tools:context=".Controladores.registerUserActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginBottom="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="183dp"
            tools:layout_editor_absoluteX="83dp"
            android:id="@+id/nombre"
            android:hint="Nombre"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/nombre"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="259dp"
            tools:layout_editor_absoluteX="83dp"
            android:id="@+id/correo"
            android:hint="Correo"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/correo"
            tools:layout_editor_absoluteY="342dp"
            tools:layout_editor_absoluteX="83dp"
            android:id="@+id/contra"
            android:hint="ContraseÃ±a"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/contra"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/edad"
            android:hint="Edad"/>
    <Button
            android:text="Registrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="560dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/edad"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="#00346B"
            tools:layout_editor_absoluteX="161dp"
            android:id="@+id/registrar"
            android:onClick="registro"
    />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="#001B38"
            android:layout_centerHorizontal="true"
            tools:ignore="MissingConstraints">
        <TextView
                android:id="@+id/showdescriptiontitle"
                android:text="REGISTRO DE USUARIO"
                android:textSize="25dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/carter_one"/>
    </LinearLayout>

    <Button
            android:text="Volver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="639dp"
            android:background="#00346B"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/registrar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteX="161dp"
            android:id="@+id/volver"
            android:onClick="volver"
    />


</android.support.constraint.ConstraintLayout>