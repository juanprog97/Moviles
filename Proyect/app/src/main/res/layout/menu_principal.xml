<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blanco"
        tools:context=".Controladores.MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:background="@color/AmarilloJaveriana"
            android:gravity="center_vertical"
            android:layout_height="60dp" android:id="@+id/ventana">

        <TextView
                android:text="Velazquez Calvache, Clara Ines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/negro"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"

                android:id="@+id/nombrePerfil"/>
    </LinearLayout>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="1dp" app:layout_constraintTop_toBottomOf="@+id/ventana">
        <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout2"
                android:paddingBottom="40dp" android:paddingTop="40dp"
                android:paddingRight="60dp" android:paddingLeft="60dp" android:padding="20dp">
            <Button
                    android:layout_width="100dp"
                    android:background="@drawable/buttonround"
                    android:layout_height="100dp"
                    android:id="@+id/verHorario"
                    android:onClick="irCursos"
                    android:foreground="@mipmap/ic_launcher_foreground" android:layout_marginTop="40dp"
                    android:layout_marginLeft="10dp"/>
            <TextView
                    android:text="@string/Horario"
                    android:layout_width="110dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/negro"
                    android:textSize="18dp"
                    android:layout_height="wrap_content" android:textStyle="bold"/>

            <Button
                    android:layout_width="100dp"
                    android:background="@drawable/buttonround"
                    android:layout_height="100dp"
                    android:id="@+id/prestamos"
                    android:foreground="@mipmap/ic_prestamos_foreground" android:layout_marginTop="40dp"
                    android:layout_marginLeft="10dp"/>
            <TextView
                    android:text="@string/Prestamos"
                    android:layout_width="133dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/negro"
                    android:textSize="18dp"
                    android:layout_height="wrap_content" android:textStyle="bold"/>
            <Button
                    android:layout_width="100dp"
                    android:background="@drawable/buttonround"
                    android:layout_height="100dp"
                    android:id="@+id/dispensador"
                    android:foreground="@mipmap/ic_dispensador_foreground" android:layout_marginTop="40dp"
                    android:layout_marginLeft="10dp"/>
            <TextView
                    android:text="@string/Dispensador"
                    android:layout_width="136dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/negro"
                    android:textSize="18dp"
                    android:layout_height="wrap_content" android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="40dp" android:paddingTop="40dp"
                android:paddingRight="60dp" android:paddingLeft="60dp" android:padding="20dp">
            <Button
                    android:layout_width="100dp"
                    android:background="@drawable/buttonround"
                    android:layout_height="100dp"
                    android:id="@+id/cursos"
                    android:foreground="@mipmap/ic_cursos_foreground" android:layout_marginTop="40dp"
                    android:layout_marginLeft="10dp"/>
            <TextView
                    android:text="@string/Cursos"
                    android:layout_width="122dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/negro"
                    android:textSize="18dp"
                    android:layout_height="wrap_content" android:textStyle="bold"/>
            <Button
                    android:layout_width="100dp"
                    android:background="@drawable/buttonround"
                    android:layout_height="100dp"
                    android:id="@+id/busqueda"
                    android:foreground="@mipmap/ic_busqueda_foreground" android:layout_marginTop="40dp"
                    android:layout_marginLeft="10dp"/>

            <TextView
                    android:text="@string/Consultar"
                    android:layout_width="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/negro"
                    android:textSize="18dp"
                    android:layout_height="wrap_content" android:textStyle="bold"/>
            <Button
                    android:layout_width="100dp"
                    android:background="@drawable/buttonround"
                    android:layout_height="100dp"
                    android:id="@+id/configuracion"
                    android:foreground="@mipmap/ic_configuracion_foreground" android:layout_marginTop="40dp"
                    android:layout_marginLeft="10dp"/>
            <TextView
                    android:text="@string/Configuracion"
                    android:layout_width="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/negro"
                    android:textSize="18dp"
                    android:layout_height="wrap_content" android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>