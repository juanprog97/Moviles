<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/blanco"
        android:layout_height="match_parent"
        tools:context=".Controladores.cursos_Activity">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarCursos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/AzulJaveriana"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:minHeight="80dp" app:titleMarginEnd="@android:dimen/notification_large_icon_height"
            app:titleMargin="@dimen/fab_margin" app:titleMarginStart="@android:dimen/notification_large_icon_height"/>
    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/log"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.015"
            app:layout_constraintHorizontal_bias="0.9"
            android:src="@mipmap/ic_horarios_round"/>
    <Button android:layout_width="50dp"
            android:id="@+id/come"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@mipmap/ic_comeback"
            app:layout_constraintVertical_bias="0.02"
            app:layout_constraintHorizontal_bias="0"
            android:onClick="regresar"
            android:layout_height="50dp"/>
    <TextView android:layout_width="wrap_content"
              android:text="Mis Cursos"
              android:textSize="20dp"
              android:textColor="@color/blanco"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintRight_toLeftOf="@id/log"
              app:layout_constraintLeft_toRightOf="@id/come"
              app:layout_constraintVertical_bias="0.035"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_height="wrap_content" android:textStyle="bold"/>

    <ExpandableListView
            android:id="@+id/lvExp"
            app:layout_constraintTop_toBottomOf="@+id/toolbarCursos"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content" android:id="@+id/button2" tools:layout_editor_absoluteY="32dp"
            android:onClick="Test"
            tools:layout_editor_absoluteX="186dp"/>

</android.support.constraint.ConstraintLayout>